@{
    Layout = "_LayoutNoSidebar"; // A simplified layout without the internal sidebar
}

<div class="landing-page">
    <header class="bg-primary text-white text-center py-5 shadow-sm">
        <div class="container">
            <h1 class="display-4 fw-bold">Workflow and Archiving System</h1>
            <p class="lead">Streamlining Procurement, Supplier Management, and Compliance in one secure platform.</p>
            <div class="mt-4">
                <a asp-controller="Auth" asp-action="SignIn" class="btn btn-light btn-lg px-5 me-2 shadow-sm">Sign In</a>
                <a asp-controller="Auth" asp-action="SignUp" class="btn btn-outline-light btn-lg px-5 shadow-sm">Vendor Accreditation</a>
            </div>
        </div>
    </header>

    <section class="container my-5">
        <div class="text-center mb-5">
            <h2 class="fw-bold">System Ecosystem</h2>
            <p class="text-muted">An end-to-end solution for corporate procurement lifecycles.</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="mb-3 text-primary">
                        <i class="fas fa-shopping-cart fa-3x"></i>
                    </div>
                    <h4>Procurement Flow</h4>
                    <p class="text-muted small">Seamless transition from Purchase Request (PR) to Approved Purchase Order (PO).</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="mb-3 text-success">
                        <i class="fas fa-user-check fa-3x"></i>
                    </div>
                    <h4>Supplier VML</h4>
                    <p class="text-muted small">Manage the Vendor Master List with automated accreditation and document tracking.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm text-center p-4">
                    <div class="mb-3 text-info">
                        <i class="fas fa-archive fa-3x"></i>
                    </div>
                    <h4>Secure Archiving</h4>
                    <p class="text-muted small">10-year retention policy for all digital signatures, quotes, and comparative summaries.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-light py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h3 class="fw-bold mb-4">Integrated Role-Based Access</h3>
                    <ul class="list-unstyled">
                        <li class="mb-3"><i class="fas fa-check-circle text-primary me-2"></i> <strong>Department Staff:</strong> Initiate and track PRs.</li>
                        <li class="mb-3"><i class="fas fa-check-circle text-primary me-2"></i> <strong>Purchasing:</strong> RFQ creation and Supplier selection.</li>
                        <li class="mb-3"><i class="fas fa-check-circle text-primary me-2"></i> <strong>Management:</strong> Director & President level approvals.</li>
                        <li class="mb-3"><i class="fas fa-check-circle text-primary me-2"></i> <strong>Vendors:</strong> Submit quotes and maintain profile.</li>
                    </ul>
                </div>
                <div class="col-lg-6 text-center">
                </div>
            </div>
        </div>
    </section>

    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container text-center">
            <p class="mb-0">&copy; 2026 W-AS Procurement Division. All Rights Reserved.</p>
            <small class="text-muted">Version 2.0 | Security Compliant Archiving</small>
        </div>
    </footer>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        transition: 0.3s;
    }

    .bg-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%) !important;
    }
</style>