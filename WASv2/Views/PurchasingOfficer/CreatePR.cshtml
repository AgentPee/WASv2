@{
    ViewData["Title"] = "Create Purchase Request";
}
<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Initiate New Purchase Request</h5>
    </div>
    <div class="card-body">
        <form>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">PR Number</label>
                    <input type="text" class="form-control" placeholder="Generated or Manual" required>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Budget Confirmation</label>
                    <select class="form-select">
                        <option>Confirmed (Stock Replenishment)</option>
                        <option>Pending</option>
                    </select>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Remarks/Reason</label>
                <textarea class="form-control" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Upload PRF (PDF/Scanned)</label>
                <input type="file" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">Submit to Dept Head</button>
        </form>
    </div>
</div>