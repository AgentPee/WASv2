<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>RFQ/RFP Management</h2>
    <a asp-controller="PurchasingOfficer" asp-action="CreateRFQ" class="btn btn-primary">
        <i class="fas fa-plus-circle me-2"></i>Create New RFQ
    </a>
</div>

<div class="card shadow-sm mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Comparative Summary: RFQ #2026-001</h5>
        <button class="btn btn-sm btn-outline-primary">Export to PDF</button>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered mb-0">
            <thead class="table-light">
                <tr>
                    <th>Specification</th>
                    <th class="text-center">Supplier A (Accredited)</th>
                    <th class="text-center">Supplier B (Accredited)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><strong>Unit Price</strong></td>
                    <td class="text-center text-success">₱1,200.00</td>
                    <td class="text-center">₱1,450.00</td>
                </tr>
                <tr>
                    <td><strong>Lead Time</strong></td>
                    <td class="text-center">7 Days</td>
                    <td class="text-center text-success">3 Days</td>
                </tr>
                <tr>
                    <td><strong>Terms</strong></td>
                    <td class="text-center">Net 30</td>
                    <td class="text-center">COD</td>
                </tr>
                <tr>
                    <td><strong>Decision</strong></td>
                    <td class="text-center">
                        <button class="btn btn-primary btn-sm">Approve with E-Signature</button>
                    </td>
                    <td class="text-center">
                        <span class="text-muted">Not Selected</span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>