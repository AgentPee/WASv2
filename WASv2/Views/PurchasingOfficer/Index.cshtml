<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Dashboard</h1>
        <div class="text-end">
            <span class="badge bg-primary p-2">Role: Purchasing Officer</span>
        </div>
    </div>
</div>

<div class="container-fluid">
    <h3>Purchasing Workspace</h3>
    <div class="row g-3">
        <div class="col-md-3">
            <div class="card text-center p-3 bg-light border-primary">
                <h6>Approved PRs</h6>
                <h2 class="text-primary">8</h2>
                <a asp-controller="PurchasingOfficer" asp-action="CreateRFQ" class="btn btn-sm btn-primary">Create RFQ</a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-3 bg-light border-warning">
                <h6>Pending RFQs</h6>
                <h2 class="text-warning">5</h2>
                <button class="btn btn-sm btn-warning">Comparative Table</button>
            </div>
        </div>
    </div>

    <div class="card mt-4 shadow">
        <div class="card-header">Comparative Summary (RFQ #2026-001)</div>
        <table class="table table-bordered mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Specs</th>
                    <th>Supplier A (Accredited)</th>
                    <th>Supplier B (Accredited)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Price</td>
                    <td class="bg-success text-white">₱10,000</td>
                    <td>₱12,500</td>
                </tr>
                <tr>
                    <td>Decision</td>
                    <td><button class="btn btn-sm btn-primary">Select & Sign</button></td>
                    <td><span class="text-muted">N/A</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div> 
